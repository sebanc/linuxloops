yes | DEBIAN_FRONTEND=noninteractive apt install $desktop_base lightdm kali-tools-top10 kali-desktop-xfce
echo -e '[Seat:*]\ngreeter-hide-users=false\n' >> /etc/lightdm/lightdm.conf
