	;;
esac
cat >./chroot/tmp/install_desktop <<UBUNTUDESKTOP
#!/bin/bash
$install_desktop
UBUNTUDESKTOP
chmod 0755 ./chroot/tmp/install_desktop

if [ ! -z "$CUSTOM_PACKAGES" ]; then
	echo -e "yes | DEBIAN_FRONTEND=noninteractive apt install $CUSTOM_PACKAGES" >> ./chroot/tmp/install_desktop
fi

if [ -f ./custom_script ]; then cp ./custom_script ./chroot/tmp/install_custom; chmod 0755 ./chroot/tmp/install_custom; fi

if [ ! -z "$surface" ] && [ "$surface" == "Yes" ]; then install_surface_apt "linux-generic-* linux-headers-* linux-image-* linux-modules-*"; fi

