then
    exec pkexec --disable-internal-agent "\$(realpath \$0)" "\$@"
fi

reboot
REBOOT
chmod 0755 /usr/bin/steamos-polkit-helpers/steamos-reboot-now
cat >/usr/bin/steamos-polkit-helpers/steamos-poweroff-now <<'POWEROFF'
