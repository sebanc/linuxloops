systemctl disable wicked.service
systemctl enable bluetooth.service NetworkManager.service
CHROOT_INIT
chmod 0755 "${bootstrapdir}"/tmp/linuxloops/chroot_init

desktop_base="adobe-sourcecodepro-fonts alsa-utils alsa-firmware at-spi2-core avahi cantarell-fonts cups cups-filters dbus-1-x11 dejavu-fonts ffmpeg google-roboto-fonts gvfs-fuse iio-sensor-proxy nss-mdns patterns-base-x11 pipewire pipewire-pulseaudio plymouth-branding-openSUSE plymouth-dracut sof-firmware system-config-printer udisks2 wallpaper-branding-openSUSE wireplumber xdg-user-dirs-gtk"
case "${environment}" in
	'Budgie')
	default_session="budgie-desktop"
	install_desktop="
zypper --non-interactive install ${desktop_base} lightdm lightdm-slick-greeter-branding-openSUSE patterns-budgie-budgie gnome-keyring-pam polkit-gnome gnome-terminal nemo NetworkManager-applet papirus-icon-theme xdg-desktop-portal-gtk
