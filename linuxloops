	;;
	'kde')
	install_desktop="
yes | DEBIAN_FRONTEND=noninteractive apt install $desktop_base sddm kubuntu-desktop dolphin plasma-discover konsole plasma-nm plasma-pa bluedevil libpam-kwallet5
