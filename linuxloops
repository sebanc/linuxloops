	;;
	'i3')
	default_session="i3"
	install_desktop="
DEBIAN_FRONTEND=noninteractive apt install -y ${desktop_base} lightdm slick-greeter i3 i3lock i3status dmenu rxvt-unicode volumeicon-alsa network-manager-gnome blueman policykit-1-gnome notification-daemon update-manager xdg-desktop-portal-gtk
