	default_session="LXDE"
	install_desktop="
rm -f /etc/apt/apt.conf.d/99linuxloops
DEBIAN_FRONTEND=noninteractive apt install -y ${desktop_base} lightdm slick-greeter lxde openbox network-manager-gnome blueman lxpolkit xdg-desktop-portal-gtk
"
	;;
	'Lxqt')
	default_session="Lubuntu"
	install_desktop="
DEBIAN_FRONTEND=noninteractive apt install -y ${desktop_base} sddm lubuntu-desktop lubuntu-default-settings openbox qterminal pcmanfm-qt lubuntu-artwork humanity-icon-theme blueman lxqt-policykit lubuntu-update-notifier xdg-desktop-portal-gtk
