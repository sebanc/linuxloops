"FALSE" "Pacific/Tarawa"
"FALSE" "Pacific/Tongatapu"
"FALSE" "Pacific/Truk"
"FALSE" "Pacific/Wake"
"FALSE" "Pacific/Wallis"
"FALSE" "Pacific/Yap"
"FALSE" "Poland"
"FALSE" "Portugal"
"FALSE" "ROC"
"FALSE" "ROK"
"FALSE" "Singapore"
"FALSE" "Turkey"
"FALSE" "UCT"
"FALSE" "US/Alaska"
