# Become root
if [[ \$EUID != 0 ]]; then
  exec pkexec "\$(realpath \$0)"
  exit 1
fi

rm -f /tmp/.gamescope_session

systemctl reset-failed sddm
systemctl restart sddm
echo "Restarted SDDM"
SESSIONSELECT
